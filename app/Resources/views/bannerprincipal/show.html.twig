{% extends 'base.html.twig' %}

{% block body %}
    <h1>Banner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bannerPrincipal.id }}</td>
            </tr>
            <tr>
                <th>Frase</th>
                <td>{{ bannerPrincipal.frase }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ bannerPrincipal.descricao }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="admin_botoes">
        <li>
            <a href="{{ path('bannerprincipal_index') }}" class="btn btn-default">Voltar</a>
        </li>
        <li>
            <a href="{{ path('bannerprincipal_edit', { 'id': bannerPrincipal.id }) }}" class="btn btn-default">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Deletar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
